<% stylesheet_link_tag 'users/show' %>
<div id="per-user-details">
  <%= render "users/user_tile", user: @user%>
  <div id="bio">
    <h2>Bio:</h2>
    <p><%=@user.bio %></p>
  </div>
  <ul>
    <% @all_posts.each do |post| %>
      <li>
        <%= render 'posts/post_tile', post: post, user: @user%>
      </li>
    <%end%>
  </ul>
  <div id="all-posts-btn">
    <%= link_to user_posts_path(@user) do %>
      <button>See all posts </button>
    <%end%>
  </div>
</div>
